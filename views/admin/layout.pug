doctype
html
    head
        meta(charset="utf-8")
        title #{title}
        link(rel="stylesheet",href="/admin/css/bootstrap.min.css")
        link(rel="stylesheet",href="/css/admin/everyone.css")
        block css
    body
        .container
            .page-header.text-center
                h2
                    | 君银证券
                    small #{title}
            .row
                .col-sm-2
                    if user&&parseInt(user.level)>=1000
                        .row
                            .col-sm-12
                                ul.list-group
                                    li.list-group-item.text-center.glyphicon.glyphicon-user#userName #{user.name}
                                    li.list-group-item.text-center.glyphicon.glyphicon-signal#userLevel #{user.level}
                                    li.list-group-item.text-center.glyphicon.glyphicon-flag#userBelong #{user.way}
                                    li.col-xs-2.col-xs-offset-4.col-sm-12.col-sm-offset-0.btn.btn-danger.btn-sm#signOut 登出
                            .col-sm-12
                                ul.nav.nav-pills.nav-stacked.text-center
                                    li(role="presentation").dropdown
                                        a.collapsed(data-toggle="collapse" href="#userlist" role="button" aria-haspopup="true" aria-expanded="false")
                                            | 用户管理
                                            span.caret
                                        ul#userlist.collapse
                                            li: a(role="button" href="/admin/userlist/1") 用户列表
                                            li: a(role="button" href="/admin/usersignup") 用户注册
                                    li(role="presentation")
                                        a.collapsed(data-toggle="collapse" href="#messagelist" role="button" aria-haspopup="true" aria-expanded="false")
                                            | 聊天管理
                                            span.caret
                                        ul#messagelist.collapse
                                            if(user.level == '10000')
                                                li: a(role="button" href="/admin/leavemes/1") 留言列表
                                            if(user.level == '10000' || user.way == 'way1')
                                                li: a(role="button" href="/way1/leavemes/1") way1留言列表
                                            if(user.level == '10000' || user.way == 'way2')
                                                li: a(role="button" href="/way2/leavemes/1") way2留言列表
                .col-sm-10
                    block content
    script(src="/js/jquery.js")
    script(src="/admin/js/bootstrap.js")
    script(src="/admin/js/everyone.js")
    block js
