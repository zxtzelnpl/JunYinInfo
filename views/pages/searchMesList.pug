extends ../admin/layout

block css

block content
    .row
        div 点击次数 #{clickCount}
        div 留言人数 #{listCount}
        div 对话人数 #{chatCount}
    .row
        form.form-horizontal(method="POST" action="/admin/leavemes/1" target="_self" id="form")
            .form-group
                label.col-sm-2.col-sm-offset-3.control-label 开始时间：
                .col-sm-4
                    input.form-control(name="search[timeStart]" type="date")
            .form-group
                label.col-sm-2.col-sm-offset-3.control-label 结束时间：
                .col-sm-4
                    input.form-control(name="search[timeEnd]" type="date")
            .form-group
                div.col-sm-offset-5.col-sm-2
                    button.btn.btn-primary(type="submit") 查询
    .row
        table.table.table-hover.table-bordered
            thead
                tr
                    th 名称
                    th 手机
                    th 留言内容
                    th 创建时间
                    th 聊天
            tbody
                if users&&users.length>0
                    each item in users
                        tr(class="item-id-"+item._id)
                            td #{item.nickName}
                            td #{item.phone}
                            td #{item.leaveMes}
                            td #{moment(item.createAt).format('YYYY年MM月DD日-HH:mm:ss')}
                            td: a(target="_blank", href= "/way1/chat/"+item._id) 聊天
    .row
        div
            ul#page.pagination
                - var n=1
                while n <= totalPageNum
                    if(n==pageNum)
                        li: a(class="active" data-page=n src="javascript:void(0)")=n++
                    else
                        li: a(data-page=n src="javascript:void(0)")=n++


block js
    script(src="/admin/js/leaveMesList.js")

