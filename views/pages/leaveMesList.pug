extends ../admin/layout

block css

block content
    .row
        .col-sm-2
            div 点击次数 #{clickCount}
        .col-sm-2
            div 留言人数 #{listCount}
        .col-sm-2
            div 对话人数 #{chatCount}
    .row
        .col-sm-10
            form.form-inline(method="POST" action="/"+way+"/leavemes/1" target="_self")
                .form-group
                    label 开始时间：
                    input.form-control(id="timeStart" name="search[timeStart]" type="date")
                .form-group
                    label 结束时间：
                    input.form-control(id="timeEnd" name="search[timeEnd]" type="date")
                button.btn.btn-primary(type="submit") 查询
        .col-sm-2
            a#excel.btn.btn-warning(href="/excel/"+way) 下载EXCEL
    .row
        table.table.table-hover.table-bordered
            thead
                tr
                    th 渠道
                    th 名称
                    th 手机
                    th 留言内容
                    th 创建时间
                    th 最近聊天时间
                    th 聊天
                    th 完成
            tbody
                if users&&users.length>0
                    each item in users
                        tr(class="item-id-"+item._id)
                            td #{item.way}
                            td #{item.nickName}
                            td #{item.phone}
                            td #{item.leaveMes}
                            td #{moment(item.createAt).format('YYYY-MM-DD--HH:mm:ss')}
                            td #{moment(item.updateAt).format('YYYY-MM-DD--HH:mm:ss')}
                            td: a.btn.btn-success.btn-sm(target="_blank", href= "/chat/"+item._id) 聊天
                            if(item.finish)
                                td: a 已经完成
                            else
                                td: a.btn.btn-danger.btn-sm.finish(data-id=item._id) 点击完成
    .row
        div
            ul#page.pagination
                - var n=1
                while n <= totalPageNum
                    if(n==pageNum)
                        li: a(class="active" href="/"+way+"/leavemes/"+n)=n++
                    else
                        li: a(href="/"+way+"/leavemes/"+n)=n++


block js
    script(src="/admin/js/leaveMesList.js")

