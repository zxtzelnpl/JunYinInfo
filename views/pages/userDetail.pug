extends ../admin/layout

block css

block content
    .row
        .col-sm-4.col-sm-offset-4
            table.table.table-hover.table-bordered
                tbody
                    tr
                        td.text-right 用户名：
                        td #{user.name}
                    tr
                        td.text-right 昵称：
                        td #{user.nickName}
                    tr
                        td.text-right 手机：
                        td #{user.phone}
                    tr
                        td.text-right 邮箱：
                        td #{user.email}
                    tr
                        td.text-right 性别：
                        td #{user.sex}
                    tr
                        td.text-right 等级：
                        td #{user.level}
                    tr
                        td.text-right 所属公司：
                        if(user.room&&user.room.title)
                            td #{user.room.title}
                        else
                            td 未分配
                    tr
                        td.text-right 是否被禁用：
                        td #{user.forbidden}

                    tr
                        td.text-right 创建时间：
                        td #{moment(user.createAt).format('MM/DD/YYYY')}
                    tr
                        td.text-right 修改时间：
                        td #{moment(user.updateAt).format('MM/DD/YYYY')}
                    tr
                        td.text-right 是否在线：
                        td #{user.online}
