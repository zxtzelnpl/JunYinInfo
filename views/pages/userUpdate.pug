extends ../admin/layout

block css

block content
    .row
        form.form-horizontal(method="POST" action="/admin/user/update")
            input(type="hidden" name="user[_id]" value=user0._id)
            div.form-group
                label.col-sm-2.col-sm-offset-3.control-label(for="signUpName") 用户名：
                div.col-sm-4
                    input.form-control(id="signUpName" name="user[name]" type="text" value=user0.name)
            div.form-group
                label.col-sm-2.col-sm-offset-3.control-label(for="signUpNickName") 昵称：
                div.col-sm-4
                    input.form-control(id="signUpNickName" name="user[nickName]" type="text" value=user0.nickName)
            div.form-group
                label.col-sm-2.col-sm-offset-3.control-label(for="signUpPhone") 手机：
                div.col-sm-4
                    input.form-control(id="signUpPhone" name="user[phone]" type="text" value=user0.phone)
            div.form-group
                label.col-sm-2.col-sm-offset-3.control-label(for="signUpEmail") 邮箱：
                div.col-sm-4
                    input.form-control(id="signUpEmail" name="user[email]" type="text" value=user0.email)
            div.form-group
                label.col-sm-2.col-sm-offset-3.control-label 性别：
                div.col-sm-4
                    if user0.sex == "male"
                        label.radio-inline(for="signUpSexMale")
                            input(id="signUpSexMale" name="user[sex]" type="radio" value="male" checked="checked")
                            | 男
                        label.radio-inline(for="signUpSexFemale")
                            input(id="signUpSexFemale" name="user[sex]" type="radio" value="female")
                            | 女
                    else
                        label.radio-inline(for="signUpSexMale")
                            input(id="signUpSexMale" name="user[sex]" type="radio" value="male")
                            | 男
                        label.radio-inline(for="signUpSexFemale")
                            input(id="signUpSexFemale" name="user[sex]" type="radio" value="female" checked="checked")
                            | 女
            div.form-group
                label.col-sm-2.col-sm-offset-3.control-label(for="signUpLevel") 等级：
                div.col-sm-4
                    input.form-control(id="signUpLevel" name="user[level]" type="number" value=user0.level)
            div.form-group
                label.col-sm-2.col-sm-offset-3.control-label(for="signWay") 渠道：
                div.col-sm-4
                    mixin option(value)
                        if user0.way && String(user0.way) == value._id
                            option(value=value._id selected)=value.name
                        else
                            option(value=value._id)=value.name
                    select.form-control(id="signWay" name="user[way]")
                        option(value='')='请选择'
                        each val in ways
                            +option(val)
            div.form-group
                div.col-sm-offset-5.col-sm-2.text-center
                    input.btn.btn-success(id="submit" type="submit" value="提交")
                div.col-sm-2.text-center
                    input.btn.btn-warning(id="reset" type="reset" value="重置")

